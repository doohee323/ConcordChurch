<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tz.concordchurch"
    android:versionCode="2"
    android:versionName="1.0" >
    
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="21" />

    <application
        android:name="com.tz.concordchurch.ChurchApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <service android:name="com.tz.concordchurch.ResourceSerivce"/>
        
        <receiver android:name="com.tz.concordchurch.PackageManagement" >
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_REPLACED" >
                </action>

                <data
                    android:path="com.broadcast_receiver_test"
                    android:scheme="package" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_FULLY_REMOVED" >
                </action>

                <data
                    android:path="com.broadcast_receiver_test"
                    android:scheme="package" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_REMOVED" >
                </action>

                <data
                    android:path="com.broadcast_receiver_test"
                    android:scheme="package" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_ADDED" >
                </action>

                <data
                    android:path="com.broadcast_receiver_test"
                    android:scheme="package" />
            </intent-filter>
        </receiver>       
        
        <receiver android:name="com.tz.concordchurch.AlarmReceiver"/>
        
        <receiver android:name="com.tz.concordchurch.ServiceStarter">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED">
                </action>
                <action android:name="android.intent.action.ACTION_PACKAGE_REPLACED">
                </action>

                <category android:name="android.intent.category.HOME">
                </category>
            </intent-filter>
        </receiver>
        
    </application>

</manifest>
